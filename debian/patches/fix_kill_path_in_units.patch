diff --git a/packaging/systemd/nmb.service b/packaging/systemd/nmb.service
index 2c152ba..c02e65d 100644
--- a/packaging/systemd/nmb.service
+++ b/packaging/systemd/nmb.service
@@ -9,7 +9,7 @@ NotifyAccess=all
