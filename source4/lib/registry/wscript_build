''',
	)


bld.SAMBA_BINARY('regshell',
	source='tools/regshell.c ../../../lib/async_req/async_sock.c',
	manpages='man/regshell.1',
	deps='''samba-hostconfig popt registry CMDLINE_S4 SMBREADLINE registry_common cluster  stable_sort
ndr-standard NDR_LSA NDR_DNSP NDR_SPOOLSS samba-credentials samba-hostconfig krb5samba authkrb5 
